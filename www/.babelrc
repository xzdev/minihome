{
    "presets": [
        ["es2015", {"modules": false}],
        "react",
        "stage-2"
    ],
    "plugins": ["react-hot-loader/babel"],
    "env": {
        "server": {
            "plugins": [
                [
                    "css-modules-transform", {
                        "generateScopedName": "[hash:8]",
                        "extensions": [".css"]
                    }
                ]
            ]
        }
    }
}